@model IEnumerable<PersonsList.Models.PersonDto>

@{
    ViewData["Title"] = "People";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>People</h1>

<p>
    <a class="btn btn-outline-primary" role="button" asp-action="Create">Create</a>
</p>
<p>
    @using (Html.BeginForm("Sort", "Person", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        <select name="method" class="custom-select" style="width:15%;">
            <option value="1">Bubble Sort</option>
            <option value="2">Shaker Sort</option>
            <option value="3">Insertion Sort</option>
            <option value="4">Selection Sort</option>
            <option value="5">Merge Sort</option>
        </select>
        <select name="field" class="custom-select" style="width:15%;">
            <option value="1">Name</option>
            <option value="2">Surname</option>
            <option value="3">Middlename</option>
            <option value="4">Email</option>
            <option value="5">Age</option>
        </select>
        <select name="order" class="custom-select" style="width:15%;">
            <option value="Ascending">Ascending</option>
            <option value="Descending">Descending</option>
        </select>
        <input class="btn btn-outline-primary" type="submit" value="Sort"/>
    }
</p>
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Middlename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Middlename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "DeleteSubmit", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>